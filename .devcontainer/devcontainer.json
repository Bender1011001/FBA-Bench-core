{
  "name": "FBA-Bench Core Dev Container",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "dev",
  "workspaceFolder": "/app",

  // Ensure VS Code attaches to the running container and leaves entrypoint/command control to the dev service
  "overrideCommand": false,

  // Recommended VS Code customizations for Python DX
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.black-formatter",
        "redhat.vscode-yaml",
        "eamodio.gitlens"
      ],
      "settings": {
        // Use Black for formatting Python
        "python.formatting.provider": "none",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        // Enable Ruff linting (formatter remains Black)
        "ruff.enable": true,
        // General editor quality-of-life
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "python.testing.pytestEnabled": true
      }
    }
  },

  // After container is created, install dev deps and enable pre-commit hooks
  "postCreateCommand": "bash -lc 'pip install -e \".[dev]\" && pre-commit install'",

  // Use root (base image defaults) unless you intend to create a non-root user
  "remoteUser": "root",

  // Forward commonly used ports if needed later (no ports required for this project by default)
  "forwardPorts": []
}